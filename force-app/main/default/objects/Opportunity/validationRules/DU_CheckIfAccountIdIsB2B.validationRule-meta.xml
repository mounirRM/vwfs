<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DU_CheckIfAccountIdIsB2B</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 RecordType.DeveloperName = &quot;DU_MasterOpportunity&quot;,
 Account.PersonContact.IsPersonAccount
)</errorConditionFormula>
    <errorDisplayField>AccountId</errorDisplayField>
    <errorMessage>The related account has to be a B2B account</errorMessage>
</ValidationRule>
