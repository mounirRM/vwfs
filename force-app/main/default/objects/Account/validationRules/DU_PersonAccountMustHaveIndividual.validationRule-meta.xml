<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DU_PersonAccountMustHaveIndividual</fullName>
    <active>true</active>
    <errorConditionFormula>IsPersonAccount &amp;&amp; ISBLANK(PersonIndividual.Id)</errorConditionFormula>
    <errorDisplayField>PersonIndividualId</errorDisplayField>
    <errorMessage>Every PersonAccount record must have an Individual assigned.</errorMessage>
</ValidationRule>
