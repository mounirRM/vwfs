<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DU_EmailMandatoryForB2CProspects</fullName>
    <active>true</active>
    <description>Email is mandatory for B2C Prospects.</description>
    <errorConditionFormula>RecordType.DeveloperName == &quot;DU_PersonAccount&quot; &amp;&amp; !DU_IsCustomer__c &amp;&amp; ISBLANK(PersonEmail)</errorConditionFormula>
    <errorDisplayField>PersonEmail</errorDisplayField>
    <errorMessage>Email is mandatory for B2C Prospects.</errorMessage>
</ValidationRule>
